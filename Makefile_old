CC=gcc
CXX=g++
RM=rm -f
#CPPFLAGS=-g $(shell root-config --cflags)
CPPFLAGS= -I.. -Wall -W -ansi -pedantic -Dcimg_use_vt100 -I/usr/X11R6/include  -lm -L/usr/X11R6/lib -lpthread -lX11 

SRCS=imagequilt.cpp patch.cpp
OBJS=$(subst .cpp,.o,$(SRCS))

all: imagequilt

imagequilt: $(OBJS)
	$(CXX) $(CPPFLAGS) -o imagequilt $(OBJS) 

.depend: $(SRCS)
	rm -f ./.depend
	$(CXX) -MM $^>>./.depend;

depend: .depend

clean:
	$(RM) $(OBJS)

dist-clean: clean
	$(RM) *~ .dependtool

include .depend
